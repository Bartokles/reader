{
  "manifest_version": 3,
  "version": "2.0",
  "name": "Reader",
  "description": "A browser extension that adds the function of reading user-selected text using system tts",

  "permissions": [
    "contextMenus",
    "storage",
    "tts"
  ],

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_security_policy": {},

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  }
}