{
  "manifest_version": 2,
  "version": "1.4",

  "name": "Reader",
  "description": "A browser extension that adds the function of reading user-selected text using system tts",

  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["main.js"]
  }
}