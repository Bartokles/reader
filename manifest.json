{
  "manifest_version": 2,
  "version": "1.0",

  "name": "Reader",
  "description": "Extention allowing to read sellected text using tts",

  "permissions": [
    "contextMenus",
    "storage"
  ],

  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["main.js"]
  }
}