{
  "manifest_version": 2,
  "version": "1.1",

  "name": "Reader",
  "description": "Extension adds functionality to read selected text using speech synthesizer",

  "permissions": [
    "contextMenus",
    "storage"
  ],

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["main.js"]
  }
}